@using Interview.Web.DataAccess
@model List<Contact>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>View</td>
                    <td>Edit</td>
                    <td>Delete</td>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td>@contact.Email</td>
                    <td>@contact.Phone</td>
                    <td>@contact.GenderId.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>